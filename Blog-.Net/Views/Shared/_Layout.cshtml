<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog USC</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>
    <header>
        <h1>Blog USC</h1>
        <nav>
            <ul>
                <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li>@Html.ActionLink("Publicaciones", "Posts", "Home")</li>
                <li>@Html.ActionLink("Listado Me Gusta", "Listado", "Home")</li>
            </ul>
        </nav>
        <a href="~/Account/Login" class="login-link">Iniciar Sesión</a>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year Blog USC. Todos los derechos reservados.</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>